
  <div class="col-11 col-lg-6">
    <div class="card card-form container-sm">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
    
      <div class="field mb-3">
        <%= f.email_field :email, autocomplete: "off", class: "form-control", placeholder: "email" %>
      </div>

      <div class="field mb-3">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password (6 characters minimum)" %>
      </div>
        

      <div class="field mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "confirm password" %>
      </div>


      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary m-3 ms-0" %>
        <%= render "devise/shared/links" %>
      </div>

      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>
    </div>
  </div>
