<p id="notice"><%= notice %></p>
<div class="container main">
  <h1>Blog Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <tr>
          <td><%= blog_post.title %></td>
          <td><%= blog_post.body %></td>
          <td><%= link_to 'Show', blog_post, class:'btn btn-light' %></td>
          <td><%= link_to 'Edit', edit_blog_post_path(blog_post), class:'btn btn-light' %></td>
          <td><%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-dark' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Blog Post', new_blog_post_path, class:'btn btn-light' %>
</div>
